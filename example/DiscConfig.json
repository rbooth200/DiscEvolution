{
  "grid" : {
    "N"  : 500,
    "R0" : 0.1,
    "R1" : 1000.0,
    "spacing" : "natural"
  },

  "disc" : {
    "alpha"   : 1e-3,
    "mass"    : 0.01,
    "Rc"      : 100.0,
    "d2g"     : 0.01,
    "Schmidt" : 1.0
  },
  
  "coagulation" : {
    "use_smoluchowski" : false,
    "f_grow" : 1.0, 
    "amin"   : 1e-5, 
    "rho_s"  : 1.0,
    
    "u_frag"   : 1000.0,
    "u_bounce" : 0.0,
    "kernel_type" : "Birnstiel",
    "amax"     : 10,
    "Nbins"    : 180,
    
    "gsd" : "MRN",
    "gsd_params" : {}
  },
    
  "planets" : [
    {"Mp" : 1, "ap" : 60}
  ],
  
  "chemistry" : {
    "on"   : false, 
    "type" : "NoReact", 
    "fix_mu" : true,
    "mu"     : 2.4,
    "crate" : 1e-17,
    "use_abundance_file" : true,
    "abundances" : "Eistrup2016.dat",
    "normalize" : true,
    "variable_grain_size" : true
  },

  "eos" : {
     "type" : "simple", 
     "opacity" : "Tazzari2016"
  },

  "star" : {
  "mass" : 1.0,
  "radius" : 2.5,
  "T_eff" : 4000.0
  },

  "transport" : {
    "gas"          : true, 
    "radial drift" : true,
    "diffusion"	   : true		   
  },

  "dust_transport" : {
    "van leer" : true,
    "settling" : false,
    "diffusion" : true
    },

  "photoevaporation" : {
    "on" : true,
    "method" : "internal_const",
    "coeff"  : 1e-9
  },   


  "output" : {
    "directory" : "output",
    "base"	: "disc",
    "format"    : "hdf5",
    "first"     : 0.0,
    "last"      : 1e6,
    "interval"  : 1e4,
    "plot"      : true,
    "plot_times" : [0, 1e5, 5e5, 1e6]
  }
}
